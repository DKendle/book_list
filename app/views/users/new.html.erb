<ul>
    <% @user.errors.full_messages.each do |msg| %>
            <li><%= msg %></li>
    <% end%>
</ul>

<h1>Sign Up Form:</h1>

<%= form_for @user do |f| %>
<%= f.label "Username" %>
<%= f.text_field :username %><br><br>

<%= f.label "Email"%>
<%= f.text_field :email %><br><br>

<%= f.label "Password" %>
<%= f.password_field :password%><br><br>

<%= f.label "Password Confirmation " %>
<%= f.password_field :password_confirmation %>

<%= f.submit%>

<hr>

Already have an account? <b><%= link_to "Login", login_path %><b>
<% end %>