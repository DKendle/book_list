
<%= link_to "Edit Book", edit_user_book_path(@user, @book)%>
<%= link_to "Back Dashboard", user_path(@user) %>
<%= link_to "Leave another Review?", new_user_review_path(@user)%>
<hr>

<b><%= @book.title %></b><br>
By: <%= @book.author%><br>
<hr>

<h3>Your Reviews for this Book:</h3>
<ul>
    <% @book.reviews.each do |review| %>
        <li>
            <b><%= link_to review.title, user_review_path(@book, review) %></b> - <%= review.description %>
        </li>
    <% end %>

</ul>
<hr>
<%= button_to "Delete Book", user_book_path(@user, @book), method: :delete,
data: { confirm: "Delete this Book from your collection?" }%>