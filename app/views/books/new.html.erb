<h1>BOOKS NEW</h1>
<h1>Add a Book to your List:</h1>


<%= form_for [@user, @book] do |f| %>

<%= f.label "Read It"%>
<%= f.check_box :read %>

<%= f.label "Currently in Collection"%>
<%= f.check_box :currently_own %><br><br>

<%= f.label "Book Title" %>
<%= f.text_field :title %><br><br>

<%= f.label "Author" %>
<%= f.text_field :author %><br><br>


<%= f.fields_for :reviews do |ff| %>
    <%= ff.hidden_field :user_id, value: @user.id %>


    <%= ff.label "Title" %>
    <%= ff.text_field :title %>

    <%= ff.label "Description" %>
    <%= ff.text_area :description %>

<% end %>

<%= f.submit "Place Book on My Shelf"%>

<% end %>